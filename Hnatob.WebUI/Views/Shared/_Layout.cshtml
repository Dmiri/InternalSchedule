@using Hnatob.WebUI.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KhNATOB - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")


    @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    *@

    <script src="https://unpkg.com/popper.js/dist/umd/popper.min.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="position-absolute container-fluid" style="z-index: 1050">
        @if (@TempData["Error"] != null)
        {
        <div class="alert alert-dismissable alert-danger mr-0">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
        @if (TempData["Message"] != null)
        {
        <div class="alert alert-dismissable alert-success mr-0">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }

    </div>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("KhNATOB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Schedule", "Schedule", "Scheduler", null, new { @class = "btn btn-dark" })</li>
                <li>@Html.ActionLink("People", "Employees", "Employees", null, new { @class = "btn btn-dark" })</li>
                <li>@Html.ActionLink("Stting", "Setting", "SetParams", null, new { @class = "btn btn-dark" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn btn-dark" })</li>
                <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "btn btn-dark" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="navbar navbar-dark bg-dark fixed-bottom">
        <p class="navbar-text">&copy; @DateTime.Now.ToShortDateString()</p>
    </footer>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)

</body>
</html>
