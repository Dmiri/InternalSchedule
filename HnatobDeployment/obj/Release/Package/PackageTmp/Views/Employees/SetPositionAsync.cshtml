@model Hnatob.WebUI.Models.SetPositionViewModel

@*<form action="/" method="post">*@
<div class="modal-header">
    <h5 class="modal-title">Modal title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @if (Model.EmailConfirmed == true)
    {
        foreach (var item in Model.Posts)
        {

            <div class="form-check">
                @{
                    string check = "off";
                    if (Model.CurentPosition.Contains(item))
                    {
                        check = "on";
                    }
                }
                <input type="checkbox" class="form-check-input" id=item>
                <label class="form-check-label" for="exampleCheck1" checked autocomplete="@check">item</label>
            </div>
        }
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    @if (Model.EmailConfirmed == true)
    {
        <button type="button" class="btn btn-primary">Save changes</button>
    }
</div>
@*</form>*@


